@model Cliente;


<br><br><br><br>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
            <form asp-controller="Clientes" asp-action="Excluir" method="post">
              <h3>Realmente deseja excluir este cliente?</h3>
